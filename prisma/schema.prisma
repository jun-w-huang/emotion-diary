// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
  relationMode = "prisma"
}

generator client {
  provider = "prisma-client-js"
}

// Credits to ChatGPT
enum Emotion {
  Joy
  Sadness
  Anger
  Fear
  Surprise
  Disgust
  Excitement
  Anticipation
  Love
  Envy
  Guilt
  Shame
  Embarrassment
  Hope
  Despair
  Nostalgia
  Loneliness
  Gratitude
  Contentment
  Pride
  Jealousy
  Awe
  Curiosity
  Confusion
  Boredom
  Relief
  Regret
  Compassion
}

// Should add more, but see : https://github.com/prisma/prisma/issues/273 
enum PhysicalSymptom {
  None
  Pain
  Tingling
  Numbness
  Sweating
  Trembling
  Palpitations
}




model EmotionEvent {
    id          String    @id @default(cuid())
    title       String    @db.VarChar(255)
    userId      String  
    emotion     Emotion   @default(Joy)
    psymptom    PhysicalSymptom @default(None)
    pobject     String?   @db.VarChar(255)
    cause       String?   @db.VarChar(255)
    reflective  Boolean   @default(true)

    start       DateTime  @default(now()) @db.DateTime(0)
    end         DateTime  @db.DateTime(0)
    description String?   @db.VarChar(255)

    createdAt   DateTime  @default(now())
    updatedAt   DateTime  @updatedAt

    @@index([userId])
}
